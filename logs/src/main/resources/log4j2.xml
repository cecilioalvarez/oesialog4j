<Configuration>
	<Appenders>
		<File name="logFichero" filename="miapp.log">
		<PatternLayout pattern="%d [%-6p] %C{1}.%M(%F:%L) - %m%n" />
			<!--  <PatternLayout pattern="%d{yyyy-MM-dd HH:MM:ss}:%p: %l %m%n" />-->
		</File>
	</Appenders>
	<Loggers>
		<Root level="info">
			<AppenderRef ref="logFichero" />
		</Root>
	</Loggers>

</Configuration>