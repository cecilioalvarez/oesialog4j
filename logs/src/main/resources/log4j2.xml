<Configuration>
	<Appenders>
		<File name="logFichero" filename="miapp.log">
			<PatternLayout
				pattern="%d--[%-6p]   %C{1}.%M(%F:%L) %m%n" />
		</File>


	</Appenders>
	<Loggers>
		<Root level="debug">
			<AppenderRef ref="logFichero" />
		</Root>
		<!-- no existe ahora mismo -->
		<Logger name="es.oesia.app1.repositories.PersonaRepository"
			level="info">
			<AppenderRef ref="logFichero" />
		</Logger>

	</Loggers>

</Configuration>